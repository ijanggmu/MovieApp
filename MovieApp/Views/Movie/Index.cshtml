@using MovieApp.Dtos.Movie;
@model List<MovieListResponseModel>

<html>
<head>
    <title>Movie List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Add any custom CSS styles here */
        .movie-card {
            border: 1px solid #ccc;
            border-radius: 10px;
            overflow: hidden;
            transition: box-shadow 0.3s;
            height: 100%;
            background-color: #f5f5f5;
        }

            .movie-card:hover {
                box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            }

        .movie-image {
            width: 100%;
            height: 200px;
            object-fit: contain;
        }

        .card-body {
            height: 400px;
            padding: 1rem;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Discover Your Next Favorite Movie</h1>

        <p class="text-center lead">Explore a handpicked selection of the latest and greatest movies. From thrilling action to heartwarming dramas, we've got something for every movie lover. Sit back, relax, and enjoy the magic of cinema with our curated movie list.</p>

        @*    <div class="text-center mb-4">
        <a href="@Url.Action("Create")" class="btn btn-primary">Create New</a>
        </div>*@
        <div class="row">
            @if (!Model.Any())
            {
                <h1 class="text-center text-danger mb-4">!!! Sorry !!! </h1>
                <h1 class="text-center text-danger mb-4">Movies are not available right now.</h1>
            }
            @foreach (var item in Model)
            {
                <div class="col-md-3 mb-3">
                    <div class="movie-card">
                        <div class="card-body">
                            <div>
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                            </div>
                            <img src="@item.FullBannerUrl" alt="Banner Image" class="movie-image card-img-top">
                            <div>
                                <p>@Html.DisplayFor(modelItem => item.MovieYear)</p>
                                <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info btn-sm">Show More</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
